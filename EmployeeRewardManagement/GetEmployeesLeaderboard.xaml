<Window x:Class="EmployeeRewardManagement.EmployeeLeaderboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee Leaderboard" Height="400" Width="600">
    <Grid>
        <Label Content="Employee Leaderboard" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <!-- DataGrid to display the leaderboard -->
        <DataGrid x:Name="LeaderboardDataGrid" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,70,0,0"
                  AutoGenerateColumns="False" Width="500" Height="250" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Rank" Binding="{Binding Rank}" Width="50"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Business Unit" Binding="{Binding BusinessUnit}" Width="150"/>
                <DataGridTextColumn Header="Job Title" Binding="{Binding JobTitle}" Width="150"/>
                <DataGridTextColumn Header="Points" Binding="{Binding Points}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Close" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Click="CloseButton_Click"/>
    </Grid>
</Window>
