<Window x:Class="EmployeeRewardManagement.AdminLoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="300">
    <Grid>
        <Label Content="Username" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="usernameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,10,0,0" Width="200"/>

        <Label Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <PasswordBox x:Name="passwordTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,50,0,0" Width="200"/>

        <Label Content="Role" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0"/>
        <ComboBox x:Name="roleComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,90,0,0" Width="200" SelectedIndex="2">
            <ComboBoxItem Content="Admin" />
            <ComboBoxItem Content="Manager" />
            <ComboBoxItem Content="Employee" />
        </ComboBox>

        <Button Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="100,130,0,0" Click="LoginButton_Click"/>
    </Grid>
</Window>
