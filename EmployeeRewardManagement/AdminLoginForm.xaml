<Window x:Class="EmployeeRewardManagement.AdminLoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Login" Height="200" Width="300">
    <Grid>
        <Label Content="Username" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="adminUsernameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,10,0,0" Width="200"/>
        <Label Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0"/>
        <PasswordBox x:Name="adminPasswordTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,40,0,0" Width="200"/>
        <Button Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="100,80,0,0" Click="LoginButton_Click"/>
    </Grid>
</Window>
