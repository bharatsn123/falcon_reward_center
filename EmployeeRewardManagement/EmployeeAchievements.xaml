<Window x:Class="EmployeeRewardManagement.EmployeeAchievements"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="View Your Achievements" Height="400" Width="600">
    <Grid>
        <Label Content="Your Achievements" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <!-- DataGrid to display achievements -->
        <DataGrid x:Name="AchievementsDataGrid" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,70,0,0"
                  AutoGenerateColumns="False" Width="500" Height="250" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Transaction ID" Binding="{Binding TransactionID}" Width="100"/>
                <DataGridTextColumn Header="Reward" Binding="{Binding RewardName}" Width="150"/>
                <DataGridTextColumn Header="Points" Binding="{Binding Points}" Width="100"/>
                <DataGridTextColumn Header="Date" Binding="{Binding TransactionDate}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Close" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Click="CloseButton_Click"/>
    </Grid>
</Window>
