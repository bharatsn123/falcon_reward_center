<Window x:Class="EmployeeRewardManagement.TransactionHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transaction History" Height="400" Width="600">
    <Grid>
        <Label Content="Transaction History" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>
        <ListView x:Name="TransactionListView" Margin="10,50,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Transaction ID" DisplayMemberBinding="{Binding TransactionID}" Width="100"/>
                    <GridViewColumn Header="Item Name" DisplayMemberBinding="{Binding RewardStoreItem.ItemName}" Width="200"/>
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding TransactionDate}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
